    <AssemblyName>Snowflake.Support.StoneProvider</AssemblyName>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\stone\dist\stone.dist.json" Link="stone.dist.json" />
